<div class="min-h-screen flex items-center justify-center py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">

    <div>
      <%= link_to root_path do %>
        <%= image_tag "logos/wibio.svg", class: "mx-auto h-7 w-auto", alt: "Wibio logo"  %>
      <% end %>
      <h2 class="mt-6 text-center">Forgot your password?</h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Wait, <%= link_to "I remember now.", new_session_path(resource_name), class: "font-medium text-primary hover:text-primary-light" %><br />
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "mt-8 space-y-6") do |f| %>

      <%= render MessageComponent.new(resource: resource) %>

      <div class="rounded-lg shadow-sm -space-y-px">
        <div class="field">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "input" %>
        </div>
      </div>

      <div class="mt-4 actions">
        <%= f.submit "Reset password", class:"btn btn-primary w-full" %>
      </div>

    <% end %>


  </div>
</div>

