<div>
  <div class="md:grid md:grid-cols-3 md:gap-6">

    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h2>Profile Settings</h2>
        <p class="mt-1 text-sm text-gray-600">Change how other people see you.</p>
      </div>
    </div>

    <div class="mt-5 md:mt-0 md:col-span-2">
      <div class="bg-white shadow sm:rounded-xl sm:overflow-hidden">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="px-4 py-5 space-y-6 sm:p-6">

            <div class="grid grid-cols-3 gap-6">

              <div class="col-span-3 sm:col-span-2">
                <%= f.label :nickname, class:"label" %>
                <div class="mt-1 flex rounded-lg shadow-sm">
                  <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"> wibio.us/ </span>
                  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:'input flex-1 w-full rounded-none rounded-r-md' %>
                </div>
              </div>

              <div class="col-span-3 sm:col-span-2">
                <div class="field">
                  <%= f.label :email, class:"label" %>
                  <%= f.email_field :email, autocomplete: "email", placeholder: "Email address", class: "input mb-4 shadow-sm" %>
                </div>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <!-- TODO: Restyle if adding confirmation-->
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>

            </div>

            <hr>

            <div class="field">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>

            <%= render MessageComponent.new(resource: resource) %>

          </div>


          <div class="px-4 py-4 text-right">
            <%= f.submit "Update", class: "btn btn-primary w-full sm:w-auto" %>
          </div>

        <% end %>

      </div>

    </div>
  </div>

  <div class="hidden sm:block" aria-hidden="true">
    <div class="py-5">
      <div class="border-t border-gray-200"></div>
    </div>
  </div>

  <div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h2>Danger Zone</h2>
          <p class="mt-1 text-sm text-gray-600">With great power comes great responsibility.</p>
        </div>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="bg-white shadow overflow-hidden sm:rounded-xl">
          <div class="px-4 py-5 space-y-6 sm:p-6">
            <h3>Cancel your account</h3>
            <div class="flex justify-between items-center flex-wrap sm:flex-nowrap gap-y-4">
              <p class="sm:text-sm">If you are not happy you can cancel your account.</p>
              <%= button_to "Cancel my account", registration_path(resource_name), form: { data: { turbo_confirm: "Are you sure? This action is irreversible." } }, method: :delete, class:"btn btn-sm btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>





