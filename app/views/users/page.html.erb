<div class="bg-gray-100">
  <div class="min-h-screen mx-auto pt-2 flex max-w-2xl flex-col sm:pt-6 lg:pt-12 xl:pt-24">
    <div class="flex items-start gap-4 p-8">
      <%= render AvatarComponent.new(user: @user, size: 24) %>
      <div class="basis-2/3 self-center">
        <h1 class="text-xl font-bold text-gray-900"><%= @user.full_name %></h1>
        <p class="text-sm text-gray-600"><%= @user.about %></p>
      </div>
    </div>
    <div class="grid gap-4 p-8 pt-4 transition sm:grid-cols-2">
      <% @user.links.each do |link| %>
        <a href="<%= link.url %>" target="_blank" class="rounded-lg bg-gray-50 p-6 pr-8 shadow-sm shadow-gray-200/50 transition duration-300 hover:bg-white hover:shadow-2xl hover:shadow-gray-200/50 sm:aspect-video only:aspect-auto only:col-span-2">
          <h3 class="text-xl font-bold text-gray-800"><%= link.name %></h3>
        </a>
      <% end %>
    </div>
    <%= link_to root_path, class:"mt-auto p-8 flex justify-center" do %>
      <%= image_tag "logos/wibio-icon.svg", class: "h-4", alt: "Wibio logo"  %>
    <% end %>


    </a>
  </div>
</div>
