<%= turbo_frame_tag link do %>
    <div class="min-h-24 bg-white flex rounded-lg shadow overflow-hidden">
        <span class="handle text-gray-400 cursor-move bg-gray-100 hover:bg-gray-200 self-stretch flex flex-col justify-center transition"> <%= heroicon 'dots-vertical', variant: :solid %> </span>
        <div class="gap-4 p-4 px-6 flex items-center justify-between grow overflow-hidden">
          <div class="space-y-1 shrink basis-3/4 overflow-hidden">
            <h2 class="truncate"><%= link.name %></h2>
            <a href="<%= link.url %>" class="text-gray-500 hover:text-primary transition truncate" target="_blank"><%= link.domain %></a>
          </div>
          <div class="flex gap-2 basis-1/4">
            <%= link_to edit_link_path(link), class: "btn btn-tertiary btn-sm ml-auto w-10 h-10 p-2" do %>
              <span class="absolute inset-1/4"><%= heroicon 'pencil', variant: :solid %></span>
            <% end %>
            <%= button_to link_path(link), method: :delete, class: "btn btn-tertiary btn-sm w-10 h-10 p-2 hover:text-secondary-dark" do %>
              <span class="absolute inset-1/4"><%= heroicon 'trash', variant: :solid %></span>
            <% end %>
          </div>
        </div>
    </div>
<% end %>