<%= form_with model: @link do |f| %>
  <div class="bg-white shadow rounded-xl overflow-hidden">
    <div class="px-4 py-5 space-y-6 sm:p-6">

    <div class="grid grid-cols-3 gap-6">

      <div class="col-span-3 sm:col-span-2">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, autofocus: true, placeholder: 'A title for your link', class: "input shadow-sm" %>
       </div>
      <div class="col-span-3 sm:col-span-2">
        <%= f.label :url, class:"label" %>
        <div class="mt-1 flex rounded-lg shadow-sm">
          <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm"><%= heroicon 'link' %> </span>
          <span class="grow"><%= f.text_field :url, placeholder: 'https://wibio.me', class:'input rounded-none rounded-r-md' %></span>
        </div>
      </div>
      <%= hidden_field(:link, :position, value: @link.position) %>
    </div>

    <%= render MessageComponent.new(resource: @link) %>

  </div>

    <div class="bg-gray-50 px-4 py-4 text-right flex justify-end gap-2 flex-wrap flex-col-reverse sm:flex-row">
      <%= link_to 'Cancel', :links, class: "btn btn-secondary w-full sm:w-auto" %>
      <%= f.submit class:"btn btn-primary w-full sm:w-auto" %>
    </div>

  </div>

<% end %>