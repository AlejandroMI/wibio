<div class="sm:mt-2 md:mt-4 lg:mt-6 xl:mt-12 max-w-2xl mx-auto px-4 sm:px-0 h-full">
  <header class="flex flex-wrap gap-y-2 items-center justify-between">
    <h1>Your Links</h1>
    <%= link_to new_link_path, class: "btn btn-secondary flex items-center gap-x-1 pl-3" do %>
      <span class="text-primary"><%= heroicon 'plus', variant: :solid %></span> New Link
    <% end %>
  </header>
  <hr class="my-4">
  <main>
      <div class="flex flex-col gap-y-4">
        <div class="flex flex-col gap-y-4" data-controller="sortable" data-sortable-handle-value=".handle"
             data-sortable-animation-value="150" data-sortable-resource-name-value="link" data-sortable-response-kind-value="json">
          <%= render @links %>
        </div>
        <%= link_to new_link_path, class: "h-24 border border-dashed border-4 rounded-lg p-8 hover:bg-gray-100 transition" do %>
            <div class="text-gray-700 font-medium text-center flex items-center justify-center">
              <span class="text-primary"><%= heroicon 'plus' %></span>
              <p>Create a new link</p>
            </div>
        <% end %>
      </div>
  </main>
</div>
