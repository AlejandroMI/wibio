<div class="sm:mt-2 md:mt-4 lg:mt-6 xl:mt-12 max-w-2xl mx-auto px-4 sm:px-0 h-full">
  <header class="flex flex-wrap gap-y-2 items-center justify-between">
    <h1>Your Links</h1>
    <%= link_to new_link_path(position: 1), data: { turbo_frame: dom_id(Link.new)}, class: "btn btn-secondary flex items-center gap-x-1 pl-3" do %>
      <span class="text-primary"><%= heroicon 'plus', variant: :solid %></span> New Link
    <% end %>
  </header>
  <hr class="my-4">
  <main>
      <div class="flex flex-col gap-y-4">
        <%= turbo_frame_tag Link.new %>
        <%= turbo_frame_tag "links",
                            class: "flex flex-col gap-y-4",
                            data: {
                              controller: "sortable",
                              sortable_handle_value: ".handle",
                              sortable_animation_value: "150",
                              sortable_resource_name_value: "link",
                              sortable_response_kind_value: "json"
                            } do %>
          <%= render @links %>
          <%= render "links/empty_state" %>
        <% end %>


      </div>
  </main>
</div>
